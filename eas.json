{
  "cli": {
    "version": ">= 12.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": false
      },
      "channel": "development"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false
      },
      "channel": "preview"
    },
    "production": {
      "distribution": "store",          // ✅ App Store / Play Store
      "autoIncrement": "buildNumber",   // ✅ iOS incrementa solo
      "android": {
        "buildType": "app-bundle",      // ✅ .aab para Play Store
        "withoutCredentials": false
      },
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false              // ✅ Necesario para dispositivos reales
      },
      "channel": "production"
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "pedro.ayala@ayalait.com.uy",
        "ascAppId": "6749812685",        // Opcional: si querés evitar login
        "submitAutomatically": false
      }
    }
  }
}
